{
  "plugins": [
    "babel"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": 2,
    "indent": [
      "error",
      2
    ],
    "no-irregular-whitespace": 0,
    "babel/semi": 0
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
